<%# 投稿フォーム %>
<%= form_for(task,url: path) do |f| %>
    <div class="form-group">
        <%= f.label :name, 'タイトル' %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :body, 'Task内容' %>
        <%= f.text_field :body, class: 'form-control' %>
    </div>
    <%= f.submit text, class: 'btn btn-info btn-block' %>
<% end %>
